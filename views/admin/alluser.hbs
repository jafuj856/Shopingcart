 

<section>




    <div class="container">
        <div class="row mt-4 mb-3">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
      
        
        <table class="table mt-5" id="productstable">
            <thead>
                <tr>
                     <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
           
            <tbody>  
                {{#each users}}
               
                <tr>
                    {{#time @index}}
                    <td scope="row">
                      {{this}}
                       
                    </td>
                   {{/time}}

                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                   
                  

                </tr>
            
             {{/each}}
             
                </tbody>
            </table>
            
        </div>
    </section>


<script>
    $(function(){
    
        $('#productstable').DataTable();
    })
</script>