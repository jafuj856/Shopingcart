 

<section>




    <div class="container">
        <div class="row mt-4 mb-3">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
      
        
        <table class="table mt-5" id="productstable">
            <thead>
                <tr>
                     <th scope="col">No</th>
                    <th scope="col">Titel</th>
                    <th scope="col">Catogory</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                    
                </tr>
            </thead>
           
            <tbody>  
                {{#each products}}
               
                <tr>
                    {{#time @index}}
                    <td scope="row">
                      {{this}}
                       
                    </td>
                   {{/time}}

                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td><img  style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
                     <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                     <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">Delete</a></td>

                </tr>
            
             {{/each}}
             
                </tbody>
            </table>
            
        </div>
    </section>


<script>
    $(function(){
    
        $('#productstable').DataTable();
    })
</script>